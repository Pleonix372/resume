<main class="p-5">
    <div class="row g-5">
        <div class="col-12">
            <div class="row">
                <div class="col-8">
                    <div class="display-5 mb-5"><b>{{header}}</b></div>

                    {{#with contacts_data}}
                    <div class="display-6 mb-3">{{title}}</div>

                    {{#each buttons}}
                    {{#if isPrimary}}
                    <button class="btn btn-warning">{{text}}</button>
                    {{/if}}

                    {{#if isOutline}}
                    <button class="btn btn-outline-warning">{{text}}</button>
                    {{/if}}
                    {{/each}}

                    {{#with form}}
                    {{#with input}}
                    <div class="row">
                        <div class="col-6">
                            {{#with surname}}
                            <label class="form-label mt-3">{{label}}</label>
                            <input class="form-control" placeholder="{{placeholder}}">
                            <div class="form-text">{{caption}}</div>
                            {{/with}}
                        </div>

                        <div class="col-6">
                            {{#with name}}
                            <label class="form-label mt-3">{{label}}</label>
                            <input class="form-control" placeholder="{{placeholder}}">
                            <div class="form-text">{{caption}}</div>
                            {{/with}}
                        </div>

                        <div class="col-6">
                            {{#with phone}}
                            <label class="form-label mt-3">{{label}}</label>
                            <input class="form-control" placeholder="{{placeholder}}">
                            <div class="form-text">{{caption}}</div>
                            {{/with}}
                        </div>

                        <div class="col-6">
                            {{#with email}}
                            <label class="form-label mt-3">{{label}}</label>
                            <input class="form-control" placeholder="{{placeholder}}">
                            <div class="form-text">{{caption}}</div>
                            {{/with}}
                        </div>
                    </div>
                    {{/with}}

                    <hr class="my-5">

                    {{#each switch}}
                    <div class="form-check form-switch mb-4">
                        <label class="form-check-label">{{text}}</label>
                        <input name="switch" type="checkbox" class="form-check-input" {{#if isActive}}checked{{/if}}>
                    </div>
                    {{/each}}
                    {{/with}}
                    {{/with}}

                    <hr class="my-5">

                    {{#with delivery}}
                    <div class="display-6 mb-3">{{title}}</div>

                    <div class="card p-2 mb-3">
                        <div class="row">
                            <div class="col-6">
                                {{#with select.[0]}}
                                <label class="form-label">{{label}}</label>
                                <select class="form-select">
                                    <option selected="0" disabled>{{placeholder}}</option>
                                    {{#each options}}
                                    <option value="{{value}}">{{text}}</option>
                                    {{/each}}
                                </select>
                                {{/with}}
                            </div>
                            <div class="col-6">
                                {{#with select.[1]}}
                                <label class="form-label">{{label}}</label>
                                <select class="form-select">
                                    <option selected="0" disabled>{{placeholder}}</option>
                                    {{#each options}}
                                    <option value="{{value}}">{{text}}</option>
                                    {{/each}}
                                </select>
                                {{/with}}
                            </div>
                        </div>
                    </div>

                    {{#each delivery_type}}
                    <div class="form-check py-1">
                        <label class="form-check-label">{{type}}</label>
                        <input name="delivery_type" type="radio" class="form-check-input" {{#if @first}}checked{{/if}}>
                    </div>
                    {{/each}}

                    <hr class="my-5">

                    {{#with payment}}
                    <div class="display-6 mb-3">{{title}}</div>
                    {{#each list}}
                    <div class="form-check py-1">
                        <label class="form-check-label">{{type}} <br>
                            <div class="text-muted">{{#if description}}{{description}}{{/if}}</div>
                        </label>
                        <input name="list" type="radio" class="form-check-input" {{#if @first}}checked{{/if}}>
                    </div>
                    {{/each}}
                    {{/with}}

                    <hr class="my-5">

                    {{#with contact}}
                    <div class="display-6 mb-3">{{title}}</div>
                    <div class="row">
                        <div class="col-6">
                            {{#with surname}}
                            <label class="form-label mt-3">{{label}}</label>
                            <input class="form-control" placeholder="{{placeholder}}">
                            <div class="form-text">{{caption}}</div>
                            {{/with}}
                        </div>

                        <div class="col-6">
                            {{#with name}}
                            <label class="form-label mt-3">{{label}}</label>
                            <input class="form-control" placeholder="{{placeholder}}">
                            <div class="form-text">{{caption}}</div>
                            {{/with}}
                        </div>

                        <div class="col-6">
                            {{#with phone}}
                            <label class="form-label mt-3">{{label}}</label>
                            <input class="form-control" placeholder="{{placeholder}}">
                            <div class="form-text">{{caption}}</div>
                            {{/with}}
                        </div>

                        <div class="col-6">
                            {{#with email}}
                            <label class="form-label mt-3">{{label}}</label>
                            <input class="form-control" placeholder="{{placeholder}}">
                            <div class="form-text">{{caption}}</div>
                            {{/with}}
                        </div>
                    </div>
                    {{/with}}

                    <hr class="mt-5 mb-4">

                    {{#with coment}}
                    <label class="form-label mt-3">{{label}}</label>
                    <input class="form-control" placeholder="{{placeholder}}">
                    {{/with}}
                    {{/with}}

                    <hr class="my-5">

                    {{#with coupon}}
                    <div class="display-6 mb-3">{{title}}</div>

                    {{#with select}}
                    {{#with availabel_coupon}}
                    <label class="form-label">{{label}}</label>
                    <select class="form-select">
                        <option selected="0" disabled>{{placeholder}}</option>
                        {{#each options}}
                        <option value="{{value}}">{{text}}</option>
                        {{/each}}
                    </select>
                    {{/with}}

                    <div class="mt-3">
                        {{#with friend_coupon}}
                        <label class="form-label">{{label}}</label>
                        <select class="form-select form-select-sm">
                            <option selected="0" disabled>{{placeholder}}</option>
                            {{#each options}}
                            <option value="{{value}}">{{text}}</option>
                            {{/each}}
                        </select>
                        {{/with}}
                    </div>
                    {{/with}}

                    {{#with add}}
                    <div class="mt-3">
                        {{#with friend}}
                        <label class="form-label">{{label}}</label>
                        <input class="form-control form-control-lg" placeholder="{{placeholder}}">
                        <div class="form-text">{{caption}}</div>
                        {{/with}}
                    </div>
                    <div class="mt-3">
                        {{#with colleague}}
                        <label class="form-label">{{label}}</label>
                        <input class="form-control" placeholder="{{placeholder}}">
                        <div class="form-text">{{caption}}</div>
                        {{/with}}
                    </div>
                    {{/with}}
                    {{/with}}

                    <hr class="my-5">

                    {{#with quiz}}
                    <div class="display-6 mb-3">{{title}}</div>
                    {{#with preference}}
                    <div>{{title}}</div>
                    {{#each options}}
                    <div class="form-check">
                        <label class="form-check-label">{{this}}</label>
                        <input name="preference" type="radio" class="form-check-input" {{#if @first}}checked{{/if}}>
                    </div>
                    {{/each}}
                    {{/with}}

                    <div class="mt-3">
                        {{#with your_expirience}}
                        <label class="form-label">{{label}}</label>
                        <input class="form-control">
                        {{/with}}
                    </div>

                    <div class="mt-3">
                        {{#with purchase_frequency}}
                        <label class="form-label">{{label}}</label>
                        <select class="form-select form-select-sm">
                            <option selected="0" disabled>{{placeholder}}</option>
                            {{#each options}}
                            <option value="{{value}}">{{text}}</option>
                            {{/each}}
                        </select>
                        {{/with}}
                    </div>

                    <div class="mt-3">
                        {{#with factors}}
                        <div>{{title}}</div>
                        {{#each options}}
                        <div class="form-check">
                            <label class="form-check-label">{{this}}</label>
                            <input name="food" type="checkbox" class="form-check-input" {{#if @first}}checked{{/if}}>
                        </div>
                        {{/each}}
                        {{/with}}
                    </div>
                    {{/with}}
                </div>



                <div class="col-4">
                    <div class="card">
                        {{#each action_block}}
                        <p class="m-0 p-1"><button class="btn 
                            {{#if isSuccess}}btn-success{{/if}}
                            {{#if isDanger}}btn-danger{{/if}}
                            {{#if isInfo}}btn-info{{/if}}
                            ">{{text}}</button></p>
                        {{/each}}
                    </div>

                    <div class="card mt-3 p-2">
                        {{#with total}}
                        <div class="display-6 mb-2">{{title}}</div>
                        {{#each item_list}}
                        <p class="m-0">{{name}}: {{price}}</p>
                        {{/each}}

                        <hr class="my-2">

                        {{#each additional_info}}
                        <p class="m-0">{{text}}: {{value}}</p>
                        {{/each}}

                        <hr class="my-2">

                        {{#with total_price}}
                        <p class="m-0">{{text}}: {{value}}</p>
                        {{/with}}

                        <hr class="my-2">

                        {{#each button}}
                        <p class="m-0 my-2"><button class="btn 
                        {{#if isPrimary}}btn-primary{{/if}}
                        {{#if isOutline}}btn-outline-primary{{/if}}
                        ">{{text}}</button></p>
                        {{/each}}

                        {{/with}}
                    </div>
                </div>

            </div>

        </div>
    </div>
    </div>
</main>