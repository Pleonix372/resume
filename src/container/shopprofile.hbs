<main class="p-5">
    <div class="row g-4">
        <div class="col-12 mb-3">

            <h1 class="mb-5">{{header}}</h1>

            <section>
                {{#with purchase}}
                <div class="nav nav-tabs">
                    <div class="nav-item">
                        <a href="#" class="nav-link active">{{tabs.[0]}}</a>
                    </div>
                    <div class="nav-item">
                        <a href="#" class="nav-link">{{tabs.[1]}}</a>
                    </div>
                </div>

                {{#with actionBlock}}
                <div class="col-12 pt-5">
                    <div class="row">
                        <div class="col-4">
                            <input class="form-control" placeholder="{{input/placeholder}}">
                        </div>

                        <div class="col-8">
                            {{#each buttons}}
                            <a href="{{link}}" class="btn
                            {{#if isSuccess}}btn-success{{/if}}
                            {{#if isOutline}}btn-outline-success{{/if}}
                            {{#if isDanger}}btn-outline-danger{{/if}}
                            me-2">{{text}}</a>
                            {{/each}}
                        </div>
                    </div>
                </div>
                {{/with}}

                <hr class="my-5">
                {{#each itemList}}
                {{> purchaseItem data=itemList}}
                {{/each}}

                <hr class="my-5">
                {{/with}}
            </section>

            <section>
                {{#with userInfo}}

                <h2 class="mb-5">{{title}}</h2>
                <div class="card">
                    <div class="card-body">
                        {{#with profileData}}
                        <h3>{{title}}</h3>
                        <div class="card mt-4">
                            <div class="card-body">
                                <div class="col-12">
                                    <div class="row">
                                        {{#with fullName}}
                                        <div class="col-4">
                                            {{#with surname}}
                                            <div class="text-muted mb-1">{{title}}</div>
                                            <div>{{value}}</div>
                                            {{/with}}
                                        </div>

                                        <div class="col-4">
                                            {{#with name}}
                                            <div class="text-muted mb-1">{{title}}</div>
                                            <div>{{value}}</div>
                                            {{/with}}
                                        </div>

                                        <div class="col-4">
                                            {{#with middleName}}
                                            <div class="text-muted mb-1">{{title}}</div>
                                            <div>{{value}}</div>
                                            {{/with}}
                                        </div>
                                        {{/with}}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card mt-4">
                            <div class="card-body">
                                <div class="col-12">
                                    <div class="row">
                                        {{#with otherInfo}}
                                        <div class="col-4">
                                            {{#with birthday}}
                                            <div class="text-muted mb-1">{{title}}</div>
                                            <div>{{value}}</div>
                                            {{/with}}
                                        </div>

                                        <div class="col-4">
                                            {{#with sex}}
                                            <div class="text-muted mb-1">{{title}}</div>
                                            <div>{{value}}</div>
                                            {{/with}}
                                        </div>

                                        <div class="col-4">
                                            {{#with language}}
                                            <div class="text-muted mb-1">{{title}}</div>
                                            <div>{{value}}</div>
                                            {{/with}}
                                        </div>
                                        {{/with}}
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/with}}

                        <div class="card mt-4">
                            <div class="card-body">
                                <div class="col-12">
                                    <div class="row">
                                        {{#each buttons}}
                                        <div class="col-4">
                                            <a href="{{link}}" class="btn
                                            {{#if isPrimary}}btn-primary{{/if}}
                                            {{#if isSecondary}}btn-outline-secondary{{/if}}
                                            {{#if isDanger}}btn-outline-danger{{/if}}
                                            ">{{text}}</a>
                                        </div>
                                        {{/each}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card my-3">
                    <div class="card-body">
                        {{#with recipients}}
                        <h3>{{title}}</h3>
                        <div class="col-12">
                            <div class="row">
                                {{#each users}}
                                <div class="col-4">
                                    <div class="card mt-4">
                                        <div class="card-body">
                                            <div class="mb-1"><b>{{name}}</b></div>
                                            <p>{{phone}}</p>
                                            {{#with button}}
                                            <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                                            {{/with}}
                                        </div>
                                    </div>
                                </div>
                                {{/each}}
                            </div>
                        </div>
                        {{/with}}
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        {{#with contacts}}
                        <h3>{{title}}</h3>
                        <div class="col-12">
                            <div class="row">
                                {{#each contactData }}
                                <div class="col-4">
                                    <div class="card mt-4">
                                        <div class="card-body">
                                            <div class="mb-1"><b>{{title}}</b></div>
                                            <p>{{value}}</p>
                                            {{#with button}}
                                            <a href="{{link}}" class="btn
                                            {{#if isPrimary}}btn-primary{{/if}}
                                            {{#if isSecondary}}btn-outline-secondary{{/if}}
                                            {{#if isDanger}}btn-outline-danger{{/if}}
                                            ">{{text}}</a>
                                            {{/with}}
                                        </div>
                                    </div>
                                </div>
                                {{/each}}
                            </div>
                        </div>
                        {{/with}}
                    </div>
                </div>
                {{/with}}
            </section>
        </div>
    </div>
</main>