{{#each data}}
<div class="card mb-4">
    <div class="card-body">
        <div class="col-12">
            <div class="row">

                <div class="col-2">
                    <img class="card-img-top" src="{{image}}" alt="{{name}}">
                </div>

                <div class="col-4">
                    <h5>{{name}}</h5>
                    <p>{{description}}</p>
                </div>

                <div class="col-2">
                    {{#with price}}
                    <div class="mt-5">{{title}}:</div>
                    <h5>{{value}}</h5>
                    {{/with}}
                </div>

                <div class="col-2">
                    <div class="mt-5">{{amount}}</div>
                </div>

                <div class="col-2">
                    {{#each buttons}}
                    <div class="pt-3 pb-1">
                        <button class="btn 
                        {{#if isPrimary}}btn-primary{{/if}}
                        {{#if isDanger}}btn-outline-danger{{/if}}
                        ">{{text}}</button>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>
{{/each}}