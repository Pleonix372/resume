<div class="col-12">
    <div class="row">
        {{#with data}}

        <h5 class="text-center mb-3">{{title}}</h5>

        {{#each cards}}
        <div class="col-4 mb-2">
            <div class="card ">

                {{#if image}}
                <img class="card-img-top" src="{{image}}" alt="{{alt}}">
                {{/if}}

                <div class="card-body">
                    <div class="card-title">
                        <h5>
                            {{title}}

                            {{#if isNew}}
                            <span class="badge text-bg-success rounded-pill">
                                Нова
                            </span>
                            {{/if}}

                            {{#if isTop}}
                            <span class="badge text-bg-danger rounded-pill">
                                Топ
                            </span>
                            {{/if}}

                            {{#if isHot}}
                            <span class="badge text-bg-warning rounded-pill">
                                Hot!
                            </span>
                            {{/if}}
                        </h5>
                    </div>


                    {{description}}
                </div>
            </div>
        </div>
        {{/each}}
        {{/with}}
    </div>
</div>